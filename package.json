{
	"name": "wml",
	"displayName": "WML",
	"description": "Wesnoth Markup Language Syntax Highlighting",
	"publisher": "Bitron",
	"version": "2.0.0",
	"bugs": {
		"url": "https://github.com/babaissarkar/wml-extension/issues"
	},
	"engines": {
		"vscode": "^1.75.0"
	},
	"categories": [
		"Programming Languages"
	],
	"main": "./out/extension.js",
	"activationEvents": [
		"onLanguage:wml"
	],
	"contributes": {
		"languages": [
			{
				"id": "wml",
				"aliases": [
					"WML",
					"wml"
				],
				"extensions": [
					".cfg",
					".pbl"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "wml",
				"scopeName": "source.wml",
				"path": "./syntaxes/wml.tmLanguage.json"
			}
		],
		"configuration": {
			"title": "WML Extension Settings",
			"properties": {
				"wml.dataDir": {
					"type": "string",
					"default": "",
					"description": "Path to Wesnoth gamedata directory"
				},
				"wml.userDataDir": {
					"type": "string",
					"default": "",
					"description": "Path to Wesnoth userdata directory"
				},
				"wml.defines": {
					"type": "string",
					"default": "",
					"description": "Any additional defines, like this: `CAMPAIGN_MY_CAMPAIGN=true,CAMPAIGN_MY_CAMPAIGN=something...`"
				}
			}
		}
	},
	"dependencies": {
		"vscode-languageclient": "^9.0.1"
	},
	"devDependencies": {
		"vsce": "^2.15.0",
		"@types/vscode": "^1.75.0",
		"ts-loader": "^9.5.1",
		"typescript": "^5.9.2"
	},
	"repository": {
		"url": "https://github.com/babaissarkar/wml-extension.git"
	},
	"scripts": {
		"compile": "tsc -p ./"
	},
	"__metadata": {
		"id": "f8439943-aded-4410-8396-4cfad3df4991",
		"publisherDisplayName": "Aaron Winter",
		"publisherId": "71205e79-0946-4bef-a6ac-7c1fc9440a0a"
	}
}
